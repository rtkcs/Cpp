#include <stdio.h>
#include <stddef.h>
#include <iostream>
#include <istream>
#include "rational.h"

int main(){

	try{
		rational r;
		std::cout << r.numerator() << "/" << r.denominator() << '\n';

		r = 2;
		std::cout << r.numerator() << "/" << r.denominator() << '\n';

		r = rational(r.numerator(), 2);
		std::cout << r.numerator() << "/" << r.denominator() << '\n';
		r.send_to(std::cout);

		r.get_from(std::istream&);
		r.send_to(std::cout);

	}catch( rational::exception const &r){
		std::cerr << "Exception from rational caught.\n";
	}
}



