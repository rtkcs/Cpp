#include <stdio.h>
#include <stddef.h>
#include <iostream>
#include <istream>
#include "rational.h"

int main(){

	try{
		rational r;
		std::cout << r.numerator() << "/" << r.denominator() << '\n';

		r = 2;
		std::cout << r.numerator() << "/" << r.denominator() << '\n';

		r = rational(r.numerator(), 2);
		std::cout << r.numerator() << "/" << r.denominator() << '\n';
		r.send_to(std::cout);


		r.send_to(std::cout);
		std::cout << r;

		std::cin >> r;
		std::cout << r;
		r.send_to(std::cout);

		//multiplication
		rational r2(2,3);
		std::cout << r << "times " << r2 << " is " << r * r2 << '\n';
		std::cout << r << "times " << i << " is " << r * r2 << '\n';
		std::cout << r << "times " << r2 << " is " << r * r2 << '\n';

	}catch( rational::exception const &r){
		std::cerr << "Exception from rational caught.\n";
